[core]
	autocrlf = false
	safecrlf = false
	editor = emacsclient -t
	pager = bat

[magit]
	extension = wip-save

[github]
	user = etimecowboy
	oauth-token = db6b750e898a8ddd4031d9fd9c6e193eec73ea70

[user]
	email = etimecowboy@gmail.com
	name = Xin

[push]
	default = current

[cola]
	spellcheck = false

[credential]
	helper = cache --timeout=3600

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# use proxy to connect github
[https "https://github.com"]
	proxy = http://192.168.0.23:7890

[http "https://github.com"]
	proxy = http://192.168.0.23:7890

